{
  "description": "Youtube downloader add-on with yt-dlp",
  "manifest_version": 2,
  "name": "Youtube downloader",
  "version": "1.0",
  "icons": {
    "48": "icons/icon.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "yt-dlp-downloader@example.org",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/icon.svg"
  },

  "permissions": ["nativeMessaging", "tabs", "notifications", "storage"],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
